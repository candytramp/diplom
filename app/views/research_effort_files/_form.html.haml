= form_for @research_effort_file do |f|
  - if @research_effort_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@research_effort_file.errors.count, "error")} prohibited this research_effort_file from being saved:"
      %ul
        - @research_effort_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :research_effort
    = f.text_field :research_effort
  .actions
    = f.submit 'Save'
