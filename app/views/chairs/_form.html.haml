= form_for @chair do |f|
  - if @chair.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chair.errors.count, "error")} prohibited this chair from being saved:"
      %ul
        - @chair.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :department
    = f.text_field :department
  .actions
    = f.submit 'Save'
