= form_for @ois_request do |f|
  - if @ois_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ois_request.errors.count, "error")} prohibited this ois_request from being saved:"
      %ul
        - @ois_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :priority
    = f.date_select :priority
  .field
    = f.label :author
    = f.text_area :author
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :object
    = f.text_area :object
  .field
    = f.label :reg_agency
    = f.text_field :reg_agency
  .field
    = f.label :research_effort
    = f.text_field :research_effort
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
