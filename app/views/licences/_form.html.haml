    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :expiration_date
    = f.date_select :expiration_date
  .field
    = f.label :req_number
    = f.text_field :req_number
  .field
    = f.label :req_author
    = f.text_area :req_author
  .field
    = f.label :req_object
    = f.text_area :req_object
  .field
    = f.label :req_status
    = f.text_field :req_status
  .field
    = f.label :reg_agency
    = f.text_field :reg_agency
  .field
    = f.label :support
    = f.text_field :support
  .field
    = f.label :req_priority
    = f.date_select :req_priority
  .field
    = f.label :reseff_name
    = f.text_area :reseff_name
