= form_for @state_program do |f|
  - if @state_program.errors.any?
    #error_explanation
      %h2= "#{pluralize(@state_program.errors.count, "error")} prohibited this state_program from being saved:"
      %ul
        - @state_program.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :creator_login
    = f.text_field :creator_login
  .field
    = f.label :creator_data
    = f.text_area :creator_data
  .actions
    = f.submit 'Save'
