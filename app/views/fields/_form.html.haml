= form_for @field do |f|
  - if @field.errors.any?
    #error_explanation
      %h2= "#{pluralize(@field.errors.count, "error")} prohibited this field from being saved:"
      %ul
        - @field.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :creator_login
    = f.text_field :creator_login
  .field
    = f.label :creator_data
    = f.text_area :creator_data
  .actions
    = f.submit 'Save'
